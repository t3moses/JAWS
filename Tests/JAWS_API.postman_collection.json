        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Automatically capture JWT token from login response",
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    try {",
                  "        const response = pm.response.json();",
                  "        ",
                  "        // Check common field names for JWT token",
                  "        const token = response.token || ",
                  "                      response.access_token || ",
                  "                      response.authToken || ",
                  "                      response.data?.token ||",
                  "                      response.data?.access_token ||",
                  "                      response.data?.authToken;",
                  "        ",
                  "        if (token) {",
                  "            pm.environment.set(\"authToken\", token);",
                  "            console.log(\"✅ JWT token saved to environment variable 'authToken'\");",
                  "        } else {",
                  "            console.log(\"⚠️ Token not found in response. Available fields:\", Object.keys(response));",
                  "        }",
                  "    } catch (error) {",
                  "        console.log(\"❌ Error parsing response:\", error.message);",
                  "    }",
                  "} else {",
                  "    console.log(\"⚠️ Login request did not return success status. Status:\", pm.response.code);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"securePassword123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            },
            "description": "Authenticate user and receive JWT token for subsequent API calls."
          },
          "response": []
        },
