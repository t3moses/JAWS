# .env.localstack
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:3000

# Database
DB_CONNECTION=sqlite
DB_DATABASE=./database/test.db

# AWS Services (pointing to LocalStack)
AWS_ENDPOINT=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1

# Email (SES via LocalStack)
MAIL_DRIVER=ses
MAIL_FROM_ADDRESS=noreply@nsc-sdc.ca
MAIL_FROM_NAME="NSC Social Day Cruising"

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120
